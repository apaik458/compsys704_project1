<System xmlns="http://systemjtechnology.com">
	<SubSystem Name="SS1" Local="true">
		<ClockDomain Name="ConveyorControllerCD" Class="ConveyorController">
			<iSignal Name="bottleAtPos1" Class="com.systemj.ipc.SimpleServer" IP="127.0.0.1" Port="10000" />
			<iSignal Name="bottleLeftPos5" Class="com.systemj.ipc.SimpleServer" IP="127.0.0.1" Port="10000" />
			<!-- conveyorEnable is output from the pos, to start the process -->
			<iSignal Name="conveyorEnable" Class="com.systemj.ipc.SimpleServer" IP="127.0.0.1" Port="10000" />
			<!-- needs to change the port -->
			<!-- bottleAtPos5 is input from rotary table output-->
			<iSignal Name="bottleAtPos5" Class="com.systemj.ipc.SimpleServer" IP="127.0.0.1" Port="10000" />
			<!-- needs to change the port -->
			<oSignal Name="motConveyorOnOff" To="ConveyorPlantCD.motConveyorOnOff" Class="com.systemj.ipc.SimpleClient" IP="127.0.0.1" Port="10001" />
		</ClockDomain>
	</SubSystem>
</System>

InitialConveyorController(
		input signal bottleAtPos1, bottleLeftPos5;
		output signal motConveyorOnOff;
		)
->{
	{
		while(true){
			abort(bottleAtPos1) {
	        	sustain motConveyorOnOff;
	    	}
		}
	}
	||
	{
    while (true) {
      	await(bottleLeftPos5);
      	sustain motConveyorOnOff; pause;  // run for 1 tick
      	sustain motConveyorOnOff; pause;  // run for another tick
    }
  }
}

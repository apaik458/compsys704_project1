InitialConveyorController(
		input signal bottleAtPos1, bottleLeftPos5, bottleAtPos1, conveyorEnable;
		output signal motConveyorOnOff;
		)
->{
	while (true) {
		await(conveyorEnable);
    	abort((bottleAtPos1 && bottleLeftPos5 && bottleAtPos5) || !conveyorEnable){
    		sustain motConveyorOnOff;
  		}
  	pause;
}
